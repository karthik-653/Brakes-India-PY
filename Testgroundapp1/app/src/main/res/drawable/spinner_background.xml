<!-- spinner_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_pressed="false" android:state_focused="false">
        <layer-list>
            <item android:top="13dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Default background color -->
            <stroke
                android:width="1dp"
                android:color="@color/biblue"/><!-- Thin black border -->
                <!-- Black color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
            </item>
        </layer-list>
    </item>
    <!-- Pressed/focused state -->
    <item android:state_pressed="true" android:state_focused="true">
        <layer-list>
            <item android:top="13dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFF00" /> <!-- Yellow background color when pressed/focused -->
            <stroke
                android:width="1dp"
                android:color="@color/biblue"/> <!-- Thin black border --><!-- Black color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
            </item>
        </layer-list>
    </item>
</selector>
